<div class="header-content">
  <h1><%%= t('admin.show') %> <%%= t('admin.<%= singular_table_name %>.<%= singular_table_name %>') %></h1>
</div>

<div>
  <p style="clear:both;"></p>
</div>

<table class="table table-bordered table-striped table-hover">
  <% attributes.reject(&:password_digest?).each do |attribute| -%>
    <tr>
      <th class="col-sm-2"><%%= t('admin.<%= singular_table_name %>.<%= attribute.name %>') %>:</th>
      <td><%%= @<%= singular_table_name %>.<%= attribute.name %> %></td>
    </tr>
<% end -%>
</table>

<div class="well">
  <%%= link_to t('admin.back'), admins_<%= index_helper %>_path, :class => 'btn btn-default' %>
  <%%= link_to t('admin.edit'), edit_admins_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => 'btn btn-default' %>
  <%%= link_to t('admin.delete'), admins_<%= singular_table_name %>_path(@<%= singular_table_name %>), method: :delete, data: { confirm: t('admin.confirm_delete') }, :class => 'btn btn-danger' %>
</div>
