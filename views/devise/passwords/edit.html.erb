<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <!-- Login Block -->
        <div class="block block-themed animated fadeIn">
            <div class="block-header bg-primary">
                <ul class="block-options">
                    <li>
                        <a href="<%= new_session_path(resource_name) %>" data-toggle="tooltip" data-placement="left" title="Log In"><i class="si si-login"></i></a>
                    </li>
                </ul>
                <h3 class="block-title">Change your password</h3>
            </div>
            <div class="block-content block-content-full block-content-narrow">

                <% if flash[:notice] %><div class='alert alert-warning'><%= notice %></div><% end %>
                <% if flash[:alert] %><div class='alert alert-danger'><%= alert %></div><% end %>

                <!-- Login Form -->
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'js-validation-login form-horizontal push-30-t push-50', novalidate: 'novalidate' }) do |f| %>
                    <%#= f.error_notification %>

                    <%= f.input :reset_password_token, as: :hidden %>
                    <%#= f.full_error :reset_password_token %>
                    <% if !f.object.errors.full_messages.blank? %><div class='alert alert-danger'><%= f.object.errors.full_messages %></div><% end %>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="form-material form-material-primary floating">
                                <%= f.text_field :password, required: true, autofocus: true, class: "form-control", type: "password", minLength: @minimum_password_length %>
                                <label for="login-username">新密碼</label>
                                <%= "#{@minimum_password_length} 長度" if @minimum_password_length %>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="form-material form-material-primary floating">
                                <%= f.text_field :password_confirmation, required: true, autofocus: true, class: "form-control", type: "password" %>
                                <label for="login-password">確認密碼</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <button class="btn btn-block btn-primary" type="submit"> Change</button>
                        </div>
                    </div>
                <% end %>
                <!-- END Login Form -->
            </div>
        </div>
        <!-- END Login Block -->
    </div>
</div>

