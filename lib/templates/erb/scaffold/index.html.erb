<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                <%%= t('admin.<%= singular_table_name %>.<%= singular_table_name %>') %> <small><%%= t('admin.list') %></small>
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li></li>
                <li><a class="link-effect" href="javascript:void(0);"><%%= t('admin.<%= singular_table_name %>.<%= singular_table_name %>') %></a></li>
            </ol>
        </div>
    </div>
</div>
<!-- END Page Header -->

<!-- Pop Out Modal (Search Form) -->
<div class="modal fade" id="modal-popout" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-popout">
        <div class="modal-content">
            <!-- Search Form -->
            <div class="block block-themed search-form-box">
                <div class="block-header bg-primary">
                    <ul class="block-options">
                        <li>
                            <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                        </li>
                    </ul>
                    <h3 class="block-title">搜尋</h3>
                </div>
                <div class="block-content">
                    <%%= search_form_for(@search, :url => admins_<%= plural_table_name %>_path, class: 'form-horizontal push-5-t') do |f| %>
                      <%%= render 'partials/search_form', f: f %>
                    <%% end %>
                </div>
            </div>
            <!-- END Search Form -->
        </div>
    </div>
</div>
<!-- END Pop Out Modal (Search Form) -->

<!-- Page Content -->
<div class="content">
    <!-- Full Table -->
    <div class="block">
        <div class="block-content">
          <div class="row">
            <div class="col-xs-6">
              <div class="pull-left" style="margin-bottom: 10px;">
                <%%= link_to t('admin.new') + t('admin.<%= singular_table_name %>.<%= singular_table_name %>'), new_admins_<%= singular_table_name %>_path, :class => 'btn btn-primary' %>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="pull-right" style="margin-bottom: 10px;">
                <button class="btn btn-info" data-toggle="modal" data-target="#modal-popout" type="button">搜尋</button>
              </div>
            </div>
          </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-vcenter">
                    <thead>
                        <tr>
                          <th><%%= t('admin._no') %></th>
                        <% attributes.reject(&:password_digest?).each do |attribute| -%>
                          <th><%%= t('admin.<%= singular_table_name %>.<%= attribute.name %>') %></th>
                        <% end -%>
                          <th><%%= t('admin.action') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
                          <tr>
                            <td>
                              <%%= link_to <%= singular_table_name %>.id, admins_<%= singular_table_name %>_path(<%= singular_table_name %>) %>
                            </td>
                          <% attributes.reject(&:password_digest?).each do |attribute| -%>
                            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
                          <% end -%>
                            <td>
                              <%%= link_to t('admin.show'), admins_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-sm btn-default btn-push fa fa-eye' %>
                              <%%= link_to t('admin.edit'), edit_admins_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-sm btn-default btn-push fa fa-pencil' %>
                              <%%= link_to t('admin.delete'), admins_<%= singular_table_name %>_path(<%= singular_table_name %>), method: :delete, data: { confirm: t('admin.confirm_delete') }, :class => 'btn btn-sm btn-danger btn-push fa fa-trash' %>
                            </td>
                          </tr>
                        <%% end %>
                    </tbody>
                </table>

            </div>
            <div class="row">
              <div class="col-xs-12 text-center">
                <%%= paginate @<%= plural_table_name %>, :window => paginate_show_ten %>
              </div>
            </div>
        </div>
    </div>
    <!-- END Full Table -->
</div>
<!-- END Page Content -->